<Window xmlns:WindowParts="clr-namespace:Seo.WindowParts"  x:Class="Seo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sims Environment Operator" Icon="icon.ico"
        Width="860" Height="600" MinHeight="600" MinWidth="860"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!--状态栏-->
        <Grid x:Name="StatusGrid" Grid.Row="1" Height="24">
            <WindowParts:StatusBar />
        </Grid>
        <!--内容区-->
        <Grid x:Name="ContentGrid" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="128" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            
            <StackPanel>
                <WindowParts:NavigationTabPanel x:Name="NaviTabPanel" Margin="0,180,0,0" NavigationTabSelected="NavigationTab_Selected" />
            </StackPanel>
            
            <Frame x:Name="PageFrame" Grid.Column="1"
                   NavigationUIVisibility="Hidden" />
        </Grid>
    </Grid>
</Window>
