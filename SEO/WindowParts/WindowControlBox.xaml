<UserControl x:Class="Seo.WindowParts.WindowControlBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="24" />
            <ColumnDefinition Width="24" />
            <ColumnDefinition Width="48" />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Content="_" Click="MinButton_Click" />
        <Button Grid.Column="1" Content="○" Click="MaxButton_Click" />
        <Button Grid.Column="2" Content="×" Click="CloseButton_Click" />
    </Grid>
</UserControl>
