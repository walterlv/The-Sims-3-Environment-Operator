<Page xmlns:WindowParts="clr-namespace:Seo.WindowParts" x:Class="Seo.WindowPages.FrontPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" Background="White"
      d:DesignHeight="300" d:DesignWidth="300"
	  Title="FrontPage">

    <Grid>
        <TextBlock Text="首页" FontSize="72" Foreground="SteelBlue"
                   HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBox x:Name="CustomFolderText" Text="自定义路径" Width="500" Height="24" Margin="0,220,0,0" />
        <WindowParts:SimpleButton Width="200" Height="32" Margin="0,300,0,0"
                                  Text="使用默认环境配置开始"
                                  Click="StartButton_Click"/>
    </Grid>
</Page>
