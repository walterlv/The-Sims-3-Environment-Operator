<Window x:Class="TS3Sky.LanguageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Language" SizeToContent="Height" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Loaded="Window_Loaded" ShowInTaskbar="False" Icon="Images/icon.ico">
    <StackPanel Margin="10">
        <TextBlock x:Name="ChooseLanguageText" Margin="0,0,0,10" TextWrapping="WrapWithOverflow" />
        <ComboBox x:Name="LanguageBox" Margin="0,0,0,50" Padding="6"
                  SelectionChanged="LanguageBox_SelectionChanged"/>
        <Button x:Name="OKButton" Width="100" Height="30" IsEnabled="False" Click="OKButton_Click"/>
    </StackPanel>
</Window>
